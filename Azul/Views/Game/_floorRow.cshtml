@model List<Azul.Models.Tile>

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-1 text-center">
                -1
            </div>
            <div class="col-md-1 text-center">
                -1
            </div>
            <div class="col-md-1 text-center">
