            </div>
            <div class="col-md-1 text-center">
                -3
            </div>
            <div class="col-md-1 text-center">
                -3
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-1">
                    <img src="@item.ImgUrl" width="31" />
                </div>
            }

            @for (int x = 0; x < 7 - Model.Count; x++)
            {
                <div class="col-md-1">
                    <div style="width:31px;height:31px; border:1px solid black"></div>
                </div>
            }
        </div>
    </div>
</div>

